<div class="intro">
    <div class="d-flex col-12 justify-content-center">
        <h4 id="sayHello">Hi<span></span>, I'm Lora Lin 😊</h4>
        <h1 class="d-none">a UI<span>/</span>UX Designer. </h1>
    </div>
    <div class="col-12 justify-content-center mt-5 d-none">
        <div class="button-container button-flip3d-vertical2">
            <div class="flipper flipper-flip3d-vertical2">
                <div class="button front">
                    <a class="btn-explore" href="#goToWorks" role="button">探索我的作品</a>
                </div>
                <div class="button button-3d back">
                    <a class="btn-explore" href="#goToWorks" role="button" onclick="">Let's go 👇</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script charset="utf-8">
    if(window.location.hash){
        var guestName = window.location.hash;

        if(guestName === '#goToWorks'){
            $('#sayHello span').append(', nice to meet you');
        }else{
            $('#sayHello span').append(decodeURI(guestName.slice(1)));
        }
    }else{
        $('#sayHello span').append(', nice to meet you');
    }

    $('a.btn-explore[href*="#"]:not([href="#"])').click(function() {    
    if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
        var target = $(this.hash);
        target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');

        if (target.length) {
            $('html, body').animate(
                {scrollTop: target.offset().top-20}, 1000, "easeInOutExpo");
            return false;
        }
    }
  });
</script>
<div id="goToWorks" class="row py-4">
    <% var itemNum=0; %>
    <% page.posts.forEach(function(item){ %>
        <% itemNum = itemNum + 1; %>
    <% }); %>

    <% page.posts.forEach(function(item){ %>
            <%- partial('_partial/portfolio-index', {item: item,itemNum: itemNum}) %>  
    <% }); %>
</div>
